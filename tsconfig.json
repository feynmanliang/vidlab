{
    "compilerOptions": {
        "outDir": "./dist/",
        "jsx": "react",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "paths": {
            "domain/*": ["./src/domain/*"],
            "views/*": ["./src/views/*"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
